{
   "background": {
      "scripts": [ "ext-contents/chromium/main/videopinner.js" ]
   },
   "content_scripts": [
     {
      "js": [ "ext-contents/common/platform-adapter.js", "ext-contents/chromium/content/content-script.js" ],
      "css": [],
      "matches": [ "http://*/*", "https://*/*" ]
     }
   ],
   "description": "Firefox extension to keep the video on YouTube visible while you scroll to read comments.",
   "manifest_version": 2,
   "name": "Video Pinner",
   "permissions": [ "tabs", "storage", "http://*/*", "https://*/*" ],
   "update_url": "http://clients2.google.com/service/update2/crx",
   "version": "0.1.0",
   "options_page": "",
   "web_accessible_resources": [
      "ext-contents/common/content/*.*"
    ]
}
